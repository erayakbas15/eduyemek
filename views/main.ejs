  <style>
    @keyframes float {
      0%, 100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    @keyframes glow {
      from {
        box-shadow: 0 0 8px rgba(102, 126, 234, 0.5);
      }
      to {
        box-shadow: 0 0 16px rgba(102, 126, 234, 0.7);
      }
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .hero-gradient {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .glass-card {
      backdrop-filter: blur(8px);
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .feature-card, .step-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .feature-card:hover, .step-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .floating-shapes {
      position: absolute;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: 0;
    }

    .shape {
      position: absolute;
      opacity: 0.1;
      animation: float 8s ease-in-out infinite;
    }

    .shape:nth-child(1) {
      top: 15%;
      left: 5%;
      animation-delay: 0s;
    }

    .shape:nth-child(2) {
      top: 50%;
      right: 5%;
      animation-delay: 2s;
    }

    .shape:nth-child(3) {
      bottom: 15%;
      left: 15%;
      animation-delay: 4s;
    }

    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(102, 126, 234, 0.3);
    }

    .scroll-indicator {
      animation: bounce 2s infinite;
    }

    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
      }
      40% {
        transform: translateY(-8px);
      }
      60% {
        transform: translateY(-4px);
      }
    }

    /* Accordion için CSS */
    .accordion-content {
      transition: max-height 0.3s ease-out, opacity 0.3s ease-out;
      max-height: 0;
      overflow: hidden;
      opacity: 0;
    }

    .accordion-content.open {
      max-height: 250px;
      opacity: 1;
    }

    .accordion-icon {
      transition: transform 0.3s ease;
    }

    .accordion-content.open ~ h3 .accordion-icon {
      transform: rotate(180deg);
    }

    /* Responsive medya sorguları */
    @media (max-width: 1280px) {
      .hero-title {
        font-size: 2.75rem;
      }
      .feature-card, .step-card {
        padding: 1.25rem;
      }
    }

    @media (max-width: 1024px) {
      .hero-title {
        font-size: 2.5rem;
      }
      .hero-section p {
        font-size: 1rem;
      }
      .feature-card, .step-card {
        padding: 1rem;
      }
      .accordion-content {
        font-size: 0.95rem;
      }
    }

    @media (max-width: 768px) {
      .hero-title {
        font-size: 2rem;
      }
      .hero-section p {
        font-size: 0.95rem;
        line-height: 1.5;
      }
      .stats-counter {
        padding: 1rem;
      }
      .feature-card, .step-card {
        padding: 0.875rem;
      }
      .accordion-content {
        font-size: 0.9rem;
      }
      .btn-primary, .btn-secondary {
        padding: 0.75rem 1.25rem;
        font-size: 0.9rem;
      }
      .footer .grid {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 480px) {
