  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            'neon-blue': '#00f6ff',
            'neon-yellow': '#ffeb3b',
            'primary': '#667eea',
            'primary-dark': '#5a67d8',
            'secondary': '#764ba2',
          },
          animation: {
            'float': 'float 6s ease-in-out infinite',
            'glow': 'glow 2s ease-in-out infinite alternate',
            'slide-up': 'slideUp 0.8s ease-out',
          },
          fontFamily: {
            poppins: ['Poppins', 'sans-serif'],
          },
        },
      },
    };
