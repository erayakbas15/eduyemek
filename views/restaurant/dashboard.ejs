        // Cookie YÃ¶netimi
        function setCookie(name, value, days) {
            const expires = new Date();
            expires.setTime(expires.getTime() + days * 24 * 60 * 60 * 1000);
            document.cookie = `${name}=${value};expires=${expires.toUTCString()};path=/;SameSite=Strict`;
            console.log(`Cookie set: ${name}=${value}`);
        }

        function getCookie(name) {
            const nameEQ = name + "=";
            const ca = document.cookie.split(';');
            for (let i = 0; i < ca.length; i++) {
                let c = ca[i].trim();
                if (c.indexOf(nameEQ) === 0) {
                    const value = c.substring(nameEQ.length, c.length);
                    console.log(`Cookie found: ${name}=${value}`);
                    return value;
                }
            }
            console.log(`Cookie not found: ${name}`);
            return null;
        }

        // GeliÅŸmiÅŸ Ses YÃ¶netim Sistemi
        class SoundManager {
            constructor() {
                this.isSoundEnabled = getCookie('soundEnabled') === 'true';
                this.hasInteracted = false;
                this.audioContext = null;
                this.audioBuffer = null;
                this.audioElement = null;
                this.rawAudioData = null;
                this.interactionEvents = ['click', 'touchstart', 'keydown', 'mousedown', 'touchend', 'pointerdown'];
                this.isPreloaded = false;

                this.init();
            }

            init() {
                // Ses elementini hazÄ±rla
                this.audioElement = document.getElementById('notification-sound');

                // Ã‡oklu etkileÅŸim eventi dinle
                this.interactionEvents.forEach(event => {
                    document.addEventListener(event, this.handleUserInteraction.bind(this), {
                        once: false,
                        passive: true,
                        capture: true
                    });
                });

                // Sayfa gÃ¶rÃ¼nÃ¼rlÃ¼k deÄŸiÅŸikliklerini dinle
                document.addEventListener('visibilitychange', this.handleVisibilityChange.bind(this));

                // Window focus eventi
                window.addEventListener('focus', this.handleWindowFocus.bind(this));

                // Ses ikonunu gÃ¼ncelle
                this.updateSoundIcon();

                // Audio context'i hazÄ±rla
                this.prepareAudioContext();

                // Ä°lk etkileÅŸim kontrolÃ¼
                setTimeout(() => {
                    if (!this.hasInteracted) {
                        console.log('KullanÄ±cÄ± etkileÅŸimi bekleniyor...');
                    }
                }, 1000);
            }

            handleUserInteraction(event) {
                if (!this.hasInteracted) {
                    this.hasInteracted = true;
                    console.log('KullanÄ±cÄ± etkileÅŸimi algÄ±landÄ±:', event.type);

                    // Audio context'i baÅŸlat
                    this.initAudioContext();

                    // Audio elementini hazÄ±rla
                    this.preloadAudio();
                }

                // Her etkileÅŸimde ses hazÄ±rlÄ±ÄŸÄ±nÄ± kontrol et
                if (this.hasInteracted && !this.isPreloaded) {
                    this.preloadAudio();
                }
            }

            handleVisibilityChange() {
                if (!document.hidden && this.hasInteracted) {
                    console.log('Sekme aktif oldu, ses hazÄ±rlÄ±ÄŸÄ± yenileniyor');
                    setTimeout(() => {
                        this.preloadAudio();
                    }, 100);
                }
            }

            handleWindowFocus() {
                if (this.hasInteracted) {
                    console.log('Window focus - ses hazÄ±rlÄ±ÄŸÄ± yenileniyor');
                    setTimeout(() => {
                        this.preloadAudio();
                    }, 100);
                }
            }

            async initAudioContext() {
                try {
                    if (!this.audioContext) {
                        this.audioContext = new (window.AudioContext || window.webkitAudioContext)();
                    }

                    if (this.audioContext.state === 'suspended') {
                        await this.audioContext.resume();
                        console.log('Audio context resumed');
                    }

                    console.log('Audio context durumu:', this.audioContext.state);
                } catch (error) {
                    console.warn('Audio context baÅŸlatÄ±lamadÄ±:', error);
                }
            }

            async preloadAudio() {
                if (this.isPreloaded) return;

                try {
                    if (this.audioElement) {
                        // Audio element hazÄ±rlÄ±ÄŸÄ±
                        this.audioElement.load();
                        this.audioElement.volume = 0.01;

                        const playPromise = this.audioElement.play();

                        if (playPromise !== undefined) {
                            await playPromise;
                            this.audioElement.pause();
                            this.audioElement.currentTime = 0;
                            this.audioElement.volume = 1;
                            this.isPreloaded = true;
                            console.log('Audio element hazÄ±rlandÄ±');
                        }
                    }

                    // Web Audio API ile buffer hazÄ±rlÄ±ÄŸÄ±
                    if (this.rawAudioData && this.audioContext) {
                        try {
                            this.audioBuffer = await this.audioContext.decodeAudioData(this.rawAudioData.slice(0));
                            console.log('Audio buffer hazÄ±rlandÄ±');
                        } catch (error) {
                            console.warn('Audio buffer decode hatasÄ±:', error);
                        }
                    }

                } catch (error) {
                    console.warn('Ses Ã¶n yÃ¼kleme hatasÄ±:', error);
                    // Hata durumunda tekrar deneme
                    setTimeout(() => {
                        this.isPreloaded = false;
                    }, 2000);
                }
            }

            prepareAudioContext() {
                // Ses dosyasÄ±nÄ± Ã¶nceden fetch et
                fetch('/uploads/notification.wav')
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Ses dosyasÄ± bulunamadÄ±');
                        }
                        return response.arrayBuffer();
                    })
                    .then(data => {
                        this.rawAudioData = data;
                        console.log('Ses verisi hazÄ±rlandÄ±');
                    })
                    .catch(error => {
                        console.warn('Ses verisi yÃ¼klenemedi:', error);
                        // Alternatif ses dosyasÄ± dene
                        return fetch('/uploads/notification.mp3');
                    })
                    .then(response => {
                        if (response) {
                            return response.arrayBuffer();
                        }
                    })
                    .then(data => {
                        if (data && !this.rawAudioData) {
                            this.rawAudioData = data;
                            console.log('Alternatif ses verisi hazÄ±rlandÄ±');
                        }
                    })
                    .catch(error => {
                        console.warn('HiÃ§bir ses dosyasÄ± yÃ¼klenemedi:', error);
                    });
            }

            async playNotificationSound() {
                if (!this.isSoundEnabled) {
                    console.log('Bildirim sesi kapalÄ±');
                    return false;
                }

                console.log('Ses Ã§alma giriÅŸimi baÅŸlatÄ±ldÄ±');
                console.log('hasInteracted:', this.hasInteracted);
                console.log('isPreloaded:', this.isPreloaded);

                if (!this.hasInteracted) {
                    console.warn('KullanÄ±cÄ± etkileÅŸimi yok');
                    this.showFallbackNotification();
                    return false;
                }

                // Ã‡oklu yÃ¶ntem deneme
                const methods = [
                    { name: 'AudioElement', method: () => this.playWithAudioElement() },
                    { name: 'AudioContext', method: () => this.playWithAudioContext() },
                    { name: 'NewAudio', method: () => this.playWithNewAudio() }
                ];

                for (const methodObj of methods) {
                    try {
                        console.log(`${methodObj.name} ile ses Ã§alma deneniyor...`);
                        const result = await methodObj.method();
                        if (result) {
                            console.log(`${methodObj.name} ile ses baÅŸarÄ±yla Ã§alÄ±ndÄ±`);
                            return true;
                        }
                    } catch (error) {
                        console.warn(`${methodObj.name} baÅŸarÄ±sÄ±z:`, error.message);
                    }
                }

                console.error('HiÃ§bir ses Ã§alma metodu Ã§alÄ±ÅŸmadÄ±');
                this.showFallbackNotification();
                return false;
            }

            async playWithAudioElement() {
                if (!this.audioElement) {
                    console.log('Audio element bulunamadÄ±');
                    return false;
                }

                try {
                    this.audioElement.currentTime = 0;
                    this.audioElement.volume = 1;

                    const playPromise = this.audioElement.play();

                    if (playPromise !== undefined) {
                        await playPromise;
                        console.log('Audio element ile Ã§alÄ±ndÄ±');
                        return true;
                    }
                    return false;
                } catch (error) {
                    console.warn('Audio element hatasÄ±:', error);
                    return false;
                }
            }

            async playWithAudioContext() {
                if (!this.audioContext || !this.audioBuffer) {
                    console.log('AudioContext veya buffer hazÄ±r deÄŸil');
                    return false;
                }

                try {
                    if (this.audioContext.state === 'suspended') {
                        await this.audioContext.resume();
                    }

                    const source = this.audioContext.createBufferSource();
                    const gainNode = this.audioContext.createGain();

                    source.buffer = this.audioBuffer;
                    source.connect(gainNode);
                    gainNode.connect(this.audioContext.destination);
                    gainNode.gain.value = 1;

                    source.start(0);
                    console.log('AudioContext ile Ã§alÄ±ndÄ±');
                    return true;

                } catch (error) {
                    console.warn('AudioContext hatasÄ±:', error);
                    return false;
                }
            }

            async playWithNewAudio() {
                try {
                    const audio = new Audio('/uploads/notification.wav');
                    audio.volume = 1;
                    audio.preload = 'auto';

                    await audio.play();
                    console.log('New Audio ile Ã§alÄ±ndÄ±');
